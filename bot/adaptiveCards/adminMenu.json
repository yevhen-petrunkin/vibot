{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Робоча область адміністратора",
          "size": "large",
          "weight": "bolder"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://adaptivecards.io/content/cats/1.png",
                  "altText": "$userName",
                  "size": "small",
                  "style": "person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "$userName",
                  "weight": "bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "none",
                  "text": "$userEmail",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Взаємодія з користувачем",
      "weight": "bolder",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Створити",
      "verb": "createUser",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "Редагувати",
      "verb": "updateUser",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "Видалити",
      "verb": "delUser",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "Змінити дату Performance Review",
      "verb": "setPerfDates",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "Надіслати повідомлення",
      "verb": "sendMessage",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "Завантажити файли",
      "verb": "downloadFile",
      "fallback": "Action.Submit"
    }
  ],
  "keyword": "adminMenu",
  "dynamic": true,
  "shouldCareerUpdate": false
}
