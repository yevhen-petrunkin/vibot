{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Registration",
      "size": "large"
    },
    {
      "type": "TextBlock",
      "text": "First of all, tell me something about yourself."
    },
    {
      "type": "Input.Text",
      "id": "userEmail",
      "isMultiline": false,
      "placeholder": "Enter your email",
      "style": "email",
      "isRequired": true,
      "errorMessage": "Email is not allowed."
    },
    {
      "type": "Input.Date",
      "id": "userStartDate",
      "isMultiline": false,
      "style": "email",
      "placeholder": "Enter date",
      "label": "Enter date when you started working in the company.",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    },
    {
      "type": "Input.ChoiceSet",
      "id": "userRole",
      "style": "compact",
      "label": "What is your role in the company?",
      "placeholder": "Choose your role",
      "isMultiSelect": false,
      "isRequired": true,
      "errorMessage": "Something wrong with the date.",
      "choices": [
        {
          "title": "Specialist",
          "value": "specialist"
        },
        {
          "title": "Manager",
          "value": "manager"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "userData",
      "fallback": "Action.Submit"
    }
  ],
  "minHeight": "200px",
  "verticalContentAlignment": "center",
  "keyword": "register"
}
