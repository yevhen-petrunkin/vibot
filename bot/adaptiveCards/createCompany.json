{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Заповніть дані для створення компанії",
      "weight": "bolder",
      "color": "dark",
      "wrap": true,
      "separator": true
    },
    {
      "type": "Input.Text",
      "id": "companyName",
      "isMultiline": false,
      "label": "Назва компанії",
      "style": "text",
      "isRequired": true,
      "errorMessage": "This name is not allowed."
    },
    {
      "type": "Input.Text",
      "id": "adminEmail",
      "isMultiline": false,
      "label": "Email адміністратора",
      "style": "email",
      "placeholder": "admin@mail.com",
      "isRequired": true,
      "errorMessage": "This email is not allowed."
    },
    {
      "type": "Input.Date",
      "id": "perfFirstStartDate",
      "isMultiline": false,
      "placeholder": "дд/мм/рр",
      "label": "Дата початку першого Performance Review",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    },
    {
      "type": "Input.Date",
      "id": "perfFirstEndDate",
      "isMultiline": false,
      "placeholder": "дд/мм/рр",
      "label": "Дата закінчення першого Performance Review",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    },
    {
      "type": "Input.Date",
      "id": "perfSecondStartDate",
      "isMultiline": false,
      "placeholder": "дд/мм/рр",
      "label": "Дата початку другого Performance Review",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    },
    {
      "type": "Input.Date",
      "id": "perfSecondEndDate",
      "isMultiline": false,
      "placeholder": "дд/мм/рр",
      "label": "Дата закінчення другого Performance Review",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Створити компанію",
      "verb": "companyCreated",
      "fallback": "Action.Submit"
    }
  ],

  "keyword": "createCompany",
  "dynamic": false,
  "shouldCareerUpdate": false
}
