{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Створити нового користувача",
      "weight": "bolder",
      "color": "dark",
      "wrap": true,
      "separator": true
    },
    {
      "type": "Input.Text",
      "id": "userEmail",
      "isMultiline": false,
      "label": "Email",
      "style": "email",
      "isRequired": true,
      "errorMessage": "This email is not allowed."
    },
    {
      "type": "Input.Text",
      "id": "userKeyword",
      "isMultiline": false,
      "style": "text",
      "label": "Пароль",
      "isRequired": true,
      "errorMessage": "This email is not allowed."
    },
    {
      "type": "Input.ChoiceSet",
      "id": "userRole",
      "style": "expanded",
      "isMultiSelect": false,
      "label": "Роль",
      "choices": [
        {
          "title": "Адміністратор",
          "value": "admin"
        },
        {
          "title": "Менеджер",
          "value": "manager"
        },
        {
          "title": "Спеціалист",
          "value": "specialist"
        }
      ]
    },
    {
      "type": "Input.Date",
      "id": "startingDate",
      "isMultiline": false,
      "placeholder": "дд/мм/рр",
      "label": "Початок роботи в компанії.",
      "isRequired": true,
      "errorMessage": "Something wrong with the date."
    },
    {
      "type": "Input.Text",
      "id": "managerEmail",
      "isMultiline": false,
      "label": "Email менеджера (тільки для спеціаліста)",
      "style": "email",
      "isRequired": true,
      "errorMessage": "This email is not allowed."
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Створити",
      "verb": "userCreated",
      "fallback": "Action.Submit"
    }
  ],
  "keyword": "createUser",
  "dynamic": false,
  "shouldCareerUpdate": false
}
