{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Enter your email to log in",
      "size": "large",
      "weight": "bolder",
      "color": "dark",
      "wrap": true,
      "separator": true
    },

    {
      "type": "Input.Text",
      "id": "logInEmail",
      "isMultiline": false,
      "label": "Enter Your Email",
      "style": "email",
      "placeholder": "user@mail.com",
      "isRequired": true,
      "errorMessage": "This email is not allowed."
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Log In",
      "verb": "submitLogIn",
      "fallback": "Action.Submit"
    }
  ],

  "keyword": "logIn",
  "dynamic": false,
  "shouldCareerUpdate": false
}
